
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents an application user's profile information, including their role and assigned outlets.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique ID from Firebase Authentication." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "displayName": { "type": "string", "description": "The user's display name." },
        "photoURL": { "type": "string", "format": "uri", "description": "URL of the user's profile picture." },
        "role": { 
          "type": "string",
          "description": "The user's role in the application.",
          "enum": ["Admin", "Manager", "Chef", "Clerk", "Cook", "Pending"]
        },
        "outletId": {
          "type": "string",
          "description": "ID of the single outlet the user is assigned to. Primarily for Clerk/Cook roles."
        }
      },
      "required": ["uid", "email", "displayName", "role"]
    },
    "Outlet": {
      "title": "Outlet",
      "description": "Represents a single physical kitchen or location.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "The name of the outlet." },
        "address": { "type": "string", "description": "The physical address of the outlet." },
        "theme": { "type": "string", "description": "The UI theme associated with the outlet." },
        "userId": { "type": "string", "description": "The ID of the user who owns this outlet." }
      },
      "required": ["name", "userId"]
    },
    "Supplier": {
      "title": "Supplier",
      "description": "Represents a vendor or supplier of inventory items.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "contactPerson": { "type": "string" },
        "phoneNumber": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "userId": { "type": "string", "description": "The ID of the user who manages this supplier." }
      },
      "required": ["name", "userId"]
    },
    "InventoryItem": {
      "title": "Inventory Item",
      "description": "Defines the specification of a single raw ingredient or sub-recipe. This is the master item.",
      "type": "object",
      "properties": {
        "materialCode": { "type": "string", "description": "SAP or other internal unique code for the material." },
        "name": { "type": "string" },
        "category": { "type": "string" },
        "purchaseQuantity": { "type": "number" },
        "purchaseUnit": { "type": "string" },
        "purchasePrice": { "type": "number" },
        "unitCost": { "type": "number", "description": "Calculated cost per a single recipe unit." },
        "supplierId": { "type": "string" },
        "allergens": { "type": "array", "items": { "type": "string" } },
        "minStock": { "type": "number" },
        "maxStock": { "type": "number" },
        "recipeUnit": { "type": "string", "description": "The smallest unit used in recipes (e.g., 'g', 'ml')." },
        "recipeUnitConversion": { "type": "number", "description": "How many recipe units are in one purchase unit." },
        "userId": { "type": "string", "description": "The ID of the user who manages this item." }
      },
      "required": ["name", "materialCode", "category", "purchaseQuantity", "purchaseUnit", "purchasePrice", "unitCost", "userId"]
    },
    "InventoryStock": {
      "title": "Inventory Stock",
      "description": "Represents the on-hand quantity of an InventoryItem at a specific Outlet.",
      "type": "object",
      "properties": {
        "inventoryId": { "type": "string", "description": "Reference to the InventoryItem." },
        "outletId": { "type": "string", "description": "Reference to the Outlet." },
        "quantity": { "type": "number", "description": "Current on-hand quantity in purchase units." },
        "status": { "type": "string", "enum": ["In Stock", "Low Stock", "Out of Stock"] },
        "userId": { "type": "string", "description": "The ID of the user who owns the parent outlet/item." }
      },
      "required": ["inventoryId", "outletId", "quantity", "status", "userId"]
    },
    "Recipe": {
        "title": "Recipe",
        "description": "A recipe for a menu item or sub-recipe.",
        "type": "object",
        "properties": {
            "internalCode": { "type": "string" },
            "sapCode": { "type": "string" },
            "name": { "type": "string" },
            "isSubRecipe": { "type": "boolean" },
            "category": { "type": "string" },
            "yield": { "type": "number" },
            "yieldUnit": { "type": "string" },
            "notes": { "type": "string" },
            "ingredients": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "itemId": { "type": "string" },
                        "name": { "type": "string" },
                        "quantity": { "type": "number" },
                        "unit": { "type": "string" },
                        "totalCost": { "type": "number" }
                    },
                    "required": ["itemId", "name", "quantity", "unit", "totalCost"]
                }
            },
            "totalCost": { "type": "number" },
            "contingencyPercentage": { "type": "number" },
            "foodCostPercentage": { "type": "number" },
            "userId": { "type": "string" }
        },
        "required": ["name", "internalCode", "isSubRecipe", "category", "ingredients", "totalCost", "userId"]
    },
    "Menu": {
        "title": "Menu",
        "description": "A collection of recipes sold as menu items.",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "items": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "recipeId": { "type": "string" },
                        "name": { "type": "string" },
                        "category": { "type": "string" },
                        "totalCost": { "type": "number" },
                        "sellingPrice": { "type": "number" }
                    },
                    "required": ["recipeId", "name", "category", "totalCost", "sellingPrice"]
                }
            },
            "userId": { "type": "string" }
        },
        "required": ["name", "items", "userId"]
    },
    "Sale": {
        "title": "Sale",
        "description": "A record of a single sale transaction.",
        "type": "object",
        "properties": {
            "outletId": { "type": "string" },
            "menuId": { "type": "string" },
            "menuName": { "type": "string" },
            "recipeId": { "type": "string" },
            "recipeName": { "type": "string" },
            "quantity": { "type": "number" },
            "totalRevenue": { "type": "number" },
            "totalCost": { "type": "number" },
            "saleDate": { "type": "string", "format": "date-time" },
            "userId": { "type": "string" }
        },
        "required": ["outletId", "menuId", "recipeId", "quantity", "totalRevenue", "totalCost", "saleDate", "userId"]
    },
    "PurchaseOrder": {
        "title": "Purchase Order",
        "description": "A request to a supplier to purchase items.",
        "type": "object",
        "properties": {
            "poNumber": { "type": "string" },
            "supplierId": { "type": "string" },
            "supplierName": { "type": "string" },
            "outletId": { "type": "string" },
            "createdAt": { "type": "string", "format": "date-time" },
            "status": { "type": "string", "enum": ["Pending", "Partially Received", "Received", "Cancelled"] },
            "items": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "itemId": { "type": "string" },
                        "name": { "type": "string" },
                        "materialCode": { "type": "string" },
                        "orderQuantity": { "type": "number" },
                        "purchaseUnit": { "type": "string" },
                        "purchasePrice": { "type": "number" }
                    }
                }
            },
            "userId": { "type": "string" }
        },
        "required": ["poNumber", "supplierId", "outletId", "status", "items", "userId"]
    },
    "Allergen": {
      "title": "Allergen",
      "description": "Represents a food allergen. This is a global collection.",
      "type": "object",
      "properties": { "name": { "type": "string" } },
      "required": ["name"]
    },
    "IngredientCategory": {
      "title": "Ingredient Category",
      "description": "A category for ingredients. This is a global collection.",
      "type": "object",
      "properties": { "name": { "type": "string" } },
      "required": ["name"]
    }
  },
  "firestore": {
    "/users/{userId}": { "schema": { "$ref": "#/entities/UserProfile" }, "description": "Stores public-facing user profile information." },
    "/outlets/{outletId}": { "schema": { "$ref": "#/entities/Outlet" }, "description": "Root collection for all outlets across all users." },
    "/suppliers/{supplierId}": { "schema": { "$ref": "#/entities/Supplier" }, "description": "Root collection for all suppliers across all users." },
    "/inventory/{inventoryId}": { "schema": { "$ref": "#/entities/InventoryItem" }, "description": "Root collection for all master inventory item specifications." },
    "/inventoryStock/{stockId}": { "schema": { "$ref": "#/entities/InventoryStock" }, "description": "Represents the many-to-many relationship between InventoryItem and Outlet." },
    "/recipes/{recipeId}": { "schema": { "$ref": "#/entities/Recipe" }, "description": "Root collection for all recipes." },
    "/menus/{menuId}": { "schema": { "$ref": "#/entities/Menu" }, "description": "Root collection for all menus." },
    "/sales/{saleId}": { "schema": { "$ref": "#/entities/Sale" }, "description": "Root collection for all sales logs." },
    "/purchaseOrders/{poId}": { "schema": { "$ref": "#/entities/PurchaseOrder" }, "description": "Root collection for all purchase orders." },
    "/allergens/{allergenId}": { "schema": { "$ref": "#/entities/Allergen" }, "description": "Global list of allergens, publicly readable." },
    "/ingredientCategories/{categoryId}": { "schema": { "$ref": "#/entities/IngredientCategory" }, "description": "Global list of ingredient categories, publicly readable." }
  },
  "auth": {
    "providers": ["google.com"]
  }
}
